<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/popup_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/triangle_iv"
        android:layout_centerHorizontal="true"
        android:background="@drawable/main_round_solid"
        android:orientation="vertical"
        android:paddingBottom="17dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:paddingTop="17dp">


        <TextView
            android:id="@+id/popupwindow_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toast_title"
            android:layout_centerHorizontal="true"
            android:text="text"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/i_know_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="知道了"
            android:textColor="@color/white"
            android:textSize="@dimen/main_text_size"
            android:textStyle="bold" />
    </LinearLayout>


    <ImageView
        android:id="@+id/triangle_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/triangle_red"
        android:visibility="visible" />
</RelativeLayout>