<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <com.truthower.suhang.mangareader.widget.gesture.GestureLockViewGroup
        android:id="@+id/id_gestureLockViewGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="65dp"
        android:gravity="center_vertical"
        app:count="3"
        app:tryTimes="5"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gesture_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"></androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/gesture_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gesture_rv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="请绘制手势密码"/>
</RelativeLayout>